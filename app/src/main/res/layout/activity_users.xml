<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/schedule_background">

    <include
        layout="@layout/view_top_header"
        android:layout_gravity="top" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/usersRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="@dimen/top_header_content_padding"
            android:paddingBottom="96dp">

            <TextView
                android:id="@+id/usersTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Users"
                android:textColor="@color/schedule_text"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/usersSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Manage student and teacher accounts"
                android:textColor="@color/schedule_muted"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCreateUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Create user"
                android:textAllCaps="false"
                android:textColor="@color/schedule_background"
                app:backgroundTint="@color/schedule_accent"
                app:cornerRadius="12dp"
                app:icon="@android:drawable/ic_input_add"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@color/schedule_background" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/usersList"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:nestedScrollingEnabled="true" />

            <TextView
                android:id="@+id/usersEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="No users yet."
                android:textColor="@color/schedule_muted"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <include
        layout="@layout/view_bottom_nav_admin"
        android:layout_gravity="bottom" />

    <ProgressBar
        android:id="@+id/usersProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/schedule_accent"
        android:visibility="gone" />
</FrameLayout>
