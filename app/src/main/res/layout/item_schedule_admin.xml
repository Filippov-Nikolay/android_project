<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/schedule_surface"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:strokeColor="@color/schedule_line"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:contentDescription="Date"
                        android:src="@android:drawable/ic_menu_my_calendar"
                        android:tint="@color/schedule_accent" />

                    <TextView
                        android:id="@+id/adminScheduleDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="2026-01-30"
                        android:textColor="@color/schedule_text"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:contentDescription="Lesson"
                        android:src="@android:drawable/ic_menu_recent_history"
                        android:tint="@color/schedule_muted" />

                    <TextView
                        android:id="@+id/adminScheduleLesson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="Lesson 1 Â· 08:50-10:10"
                        android:textColor="@color/schedule_muted"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnEditSchedule"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_manage_action"
                    android:contentDescription="Edit"
                    android:scaleType="center"
                    android:src="@android:drawable/ic_menu_edit"
                    android:tint="@color/schedule_text" />

                <ImageButton
                    android:id="@+id/btnDeleteSchedule"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_manage_action"
                    android:contentDescription="Delete"
                    android:scaleType="center"
                    android:src="@android:drawable/ic_menu_delete"
                    android:tint="@color/manage_stat_red" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/adminScheduleSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Subject"
            android:textColor="@color/schedule_text"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/adminScheduleTeacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Teacher"
            android:textColor="@color/schedule_muted"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/adminScheduleGroupBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_admin_schedule_group"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"
                android:paddingRight="10dp"
                android:paddingBottom="4dp"
                android:text="Group"
                android:textColor="@color/admin_schedule_group_text"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/adminScheduleTypeBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_admin_schedule_type_lecture"
                android:paddingLeft="8dp"
                android:paddingTop="3dp"
                android:paddingRight="8dp"
                android:paddingBottom="3dp"
                android:text="LECTURE"
                android:textAllCaps="true"
                android:textColor="@color/admin_schedule_type_lecture"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/adminScheduleRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:drawablePadding="4dp"
                android:drawableStart="@android:drawable/ic_menu_mylocation"
                android:drawableTint="@color/schedule_muted"
                android:text="Room 505"
                android:textColor="@color/schedule_muted"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
