<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_schedule_event_card"
    android:clipToOutline="true"
    android:elevation="6dp"
    android:outlineProvider="background"
    android:orientation="horizontal">

    <View
        android:id="@+id/scheduleEventTypeBar"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="@color/schedule_accent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/scheduleEventTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lesson"
            android:textColor="@color/schedule_text"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/scheduleEventDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="10:00 - 11:20 | Room 11"
            android:textColor="@color/schedule_muted"
            android:textSize="10sp" />
    </LinearLayout>
</LinearLayout>
