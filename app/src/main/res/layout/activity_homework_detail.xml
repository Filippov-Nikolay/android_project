<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/schedule_background">

    <include
        layout="@layout/view_top_header"
        android:layout_gravity="top" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="@dimen/top_header_content_padding"
            android:paddingBottom="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/schedule_surface"
                app:cardCornerRadius="22dp"
                app:cardElevation="8dp"
                app:strokeColor="@color/schedule_line"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/detailSubject"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_homework_subject_badge"
                            android:paddingLeft="10dp"
                            android:paddingTop="4dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="4dp"
                            android:text="SUBJECT"
                            android:textAllCaps="true"
                            android:textColor="@color/schedule_background"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <ImageButton
                            android:id="@+id/btnHomeworkDetailClose"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/bg_manage_action"
                            android:contentDescription="Close"
                            android:scaleType="center"
                            android:src="@android:drawable/ic_menu_close_clear_cancel"
                            android:tint="@color/schedule_muted" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/detailAssignedDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="end"
                        android:text="Assigned --"
                        android:textColor="@color/schedule_muted"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/detailTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Title"
                        android:textColor="@color/schedule_text"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/bg_homework_teacher_chip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/detailTeacherAvatar"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/bg_submission_avatar"
                            android:gravity="center"
                            android:text="T"
                            android:textColor="@color/schedule_text"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Teacher"
                                android:textColor="@color/schedule_muted"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/detailTeacherName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Teacher name"
                                android:textColor="@color/schedule_text"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/detailStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_homework_status_todo"
                            android:paddingLeft="10dp"
                            android:paddingTop="4dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="4dp"
                            android:text="TODO"
                            android:textAllCaps="true"
                            android:textColor="@color/schedule_text"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/detailDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="Description"
                        android:textColor="@color/schedule_muted"
                        android:textSize="14sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDownloadTeacherFile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Materials for task"
                        android:textAllCaps="false"
                        android:textColor="@color/schedule_accent"
                        app:backgroundTint="@color/schedule_surface_muted"
                        app:cornerRadius="12dp"
                        app:icon="@android:drawable/ic_menu_save"
                        app:iconGravity="textStart"
                        app:iconPadding="6dp"
                        app:iconTint="@color/schedule_accent" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDownloadSubmission"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="My submission"
                        android:textAllCaps="false"
                        android:textColor="@color/schedule_text"
                        app:backgroundTint="@color/schedule_surface_muted"
                        app:cornerRadius="12dp"
                        app:icon="@android:drawable/ic_menu_save"
                        app:iconGravity="textStart"
                        app:iconPadding="6dp"
                        app:iconTint="@color/schedule_muted" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        app:cardBackgroundColor="@color/schedule_surface_muted"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/schedule_line"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:contentDescription="Deadline"
                                android:src="@android:drawable/ic_menu_my_calendar"
                                android:tint="@color/schedule_muted" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Deadline"
                                    android:textAllCaps="true"
                                    android:textColor="@color/schedule_muted"
                                    android:textSize="10sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/detailDeadline"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="--"
                                    android:textColor="@color/schedule_text"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/detailRemainingTag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_homework_remaining_tag"
                                android:paddingLeft="10dp"
                                android:paddingTop="4dp"
                                android:paddingRight="10dp"
                                android:paddingBottom="4dp"
                                android:text="--"
                                android:textColor="@color/schedule_background"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/homeworkPendingCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/schedule_surface_muted"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/schedule_line"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:padding="18dp">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:contentDescription="In review"
                                android:src="@android:drawable/ic_menu_recent_history"
                                android:tint="@color/schedule_muted" />

                            <TextView
                                android:id="@+id/homeworkPendingTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="In review"
                                android:textColor="@color/schedule_text"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/homeworkPendingSubtitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:gravity="center"
                                android:text="You already submitted this homework. Cancel the submission to update it."
                                android:textColor="@color/schedule_muted"
                                android:textSize="12sp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnCancelSubmission"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="14dp"
                                android:text="Cancel submission"
                                android:textAllCaps="false"
                                android:textColor="@color/schedule_background"
                                app:backgroundTint="@color/schedule_accent"
                                app:cornerRadius="12dp"
                                app:icon="@android:drawable/ic_menu_close_clear_cancel"
                                app:iconGravity="textStart"
                                app:iconPadding="8dp"
                                app:iconTint="@color/schedule_background" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:id="@+id/detailGradeContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Grade"
                            android:textColor="@color/schedule_muted"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/detailGradeBadge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/bg_submission_grade"
                            android:paddingLeft="10dp"
                            android:paddingTop="4dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="4dp"
                            android:text="12/12"
                            android:textColor="@color/schedule_background"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/detailFeedback"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Feedback"
                            android:textColor="@color/schedule_muted"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/detailAnswerTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="Your answer"
                        android:textColor="@color/schedule_text"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/homeworkUploadSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_homework_dropzone"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="18dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:contentDescription="Upload"
                            android:src="@android:drawable/ic_menu_send"
                            android:tint="@color/schedule_muted" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Select files for submission"
                            android:textColor="@color/schedule_text"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPickFiles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Choose files"
                            android:textAllCaps="false"
                            android:textColor="@color/schedule_text"
                            app:backgroundTint="@color/schedule_surface_muted"
                            app:cornerRadius="12dp"
                            app:icon="@android:drawable/ic_input_add"
                            app:iconGravity="textStart"
                            app:iconPadding="6dp"
                            app:iconTint="@color/schedule_muted" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="ZIP, PDF, DOCX"
                            android:textColor="@color/schedule_muted"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/selectedFilesLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="No files selected"
                        android:textColor="@color/schedule_muted"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/editComment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/bg_form_input"
                        android:gravity="top"
                        android:hint="Add comment (optional)"
                        android:inputType="textMultiLine"
                        android:minLines="3"
                        android:padding="12dp"
                        android:textColor="@color/schedule_text"
                        android:textColorHint="@color/schedule_muted" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSubmitHomework"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Submit for review"
                        android:textAllCaps="false"
                        android:textColor="@color/schedule_background"
                        app:backgroundTint="@color/schedule_accent"
                        app:cornerRadius="14dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBackToList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Back to list"
                        android:textAllCaps="false"
                        android:textColor="@color/schedule_muted"
                        app:backgroundTint="@android:color/transparent" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/homeworkDetailProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/schedule_accent"
        android:visibility="gone" />
</FrameLayout>
