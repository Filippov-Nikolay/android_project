<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topHeaderRoot"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    app:cardBackgroundColor="@color/schedule_surface"
    app:cardCornerRadius="0dp"
    app:cardElevation="8dp"
    app:strokeColor="@color/schedule_line"
    app:strokeWidth="1dp"
    app:cardMaxElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <LinearLayout
            android:id="@+id/headerBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/headerBrandBadge"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/bg_dashboard_avatar"
                android:gravity="center"
                android:text="JB"
                android:textColor="@color/schedule_icon"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/headerBrandTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-black"
                android:text="JByte"
                android:textColor="@color/schedule_text"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/headerThemeButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_manage_action"
            android:contentDescription="Theme"
            android:src="@drawable/ic_theme_light"
            app:tint="@color/schedule_muted" />

        <ImageButton
            android:id="@+id/headerNotificationButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_manage_action"
            android:contentDescription="Notifications"
            android:src="@drawable/ic_header_info"
            app:tint="@color/schedule_muted" />

        <LinearLayout
            android:id="@+id/headerMenuButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_manage_action"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp">

            <TextView
                android:id="@+id/headerAvatar"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@drawable/bg_dashboard_avatar"
                android:gravity="center"
                android:text="JB"
                android:textColor="@color/schedule_accent"
                android:textSize="11sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="4dp"
                android:src="@android:drawable/arrow_down_float"
                app:tint="@color/schedule_muted" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>