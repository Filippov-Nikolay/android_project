<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/schedule_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/scheduleHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/schedule_surface"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/btnPrevMonth"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:contentDescription="Previous month"
                android:scaleType="center"
                android:src="@android:drawable/ic_media_previous"
                android:tint="@color/schedule_text" />

            <TextView
                android:id="@+id/scheduleMonthTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="January 2026"
                android:textColor="@color/schedule_text"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnNextMonth"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="4dp"
                android:background="@android:color/transparent"
                android:contentDescription="Next month"
                android:scaleType="center"
                android:src="@android:drawable/ic_media_next"
                android:tint="@color/schedule_text" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/scheduleViewToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_schedule_segmented"
                android:orientation="horizontal"
                android:padding="4dp">

                <ImageButton
                    android:id="@+id/btnListMode"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Week view"
                    android:scaleType="center"
                    android:src="@android:drawable/ic_menu_agenda"
                    android:tint="@color/schedule_muted" />

                <ImageButton
                    android:id="@+id/btnCalendarMode"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="4dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Month view"
                    android:scaleType="center"
                    android:src="@android:drawable/ic_menu_my_calendar"
                    android:tint="@color/schedule_muted" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/schedule_line" />

        <LinearLayout
            android:id="@+id/scheduleWeekdays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/schedule_surface"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:id="@+id/scheduleWeekMon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="MON"
                android:textColor="@color/schedule_muted"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/scheduleWeekTue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TUE"
                android:textColor="@color/schedule_muted"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/scheduleWeekWed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="WED"
                android:textColor="@color/schedule_muted"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/scheduleWeekThu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="THU"
                android:textColor="@color/schedule_muted"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/scheduleWeekFri"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="FRI"
                android:textColor="@color/schedule_muted"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/scheduleWeekSat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="SAT"
                android:textColor="@color/schedule_muted"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/scheduleWeekSun"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="SUN"
                android:textColor="@color/schedule_muted"
                android:textSize="12sp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/scheduleCalendarGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

        <View
            android:id="@+id/scheduleCalendarHandle"
            android:layout_width="44dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:background="@color/schedule_handle" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scheduleTimelineScroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:paddingBottom="96dp">

            <com.example.onlinediary.ui.view.ScheduleTimelineLayout
                android:id="@+id/scheduleTimeline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <include
        layout="@layout/view_bottom_nav_student"
        android:layout_gravity="bottom" />

    <include
        layout="@layout/view_bottom_nav_teacher"
        android:layout_gravity="bottom"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/scheduleProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/schedule_accent"
        android:visibility="gone" />
</FrameLayout>
