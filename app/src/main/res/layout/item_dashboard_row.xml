<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_dashboard_row_item"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <FrameLayout
        android:id="@+id/dashboardRowIconWrapper"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/bg_dashboard_icon">

        <ImageView
            android:id="@+id/dashboardRowIcon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:contentDescription="Item icon"
            android:scaleType="centerInside"
            android:tint="@android:color/white" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dashboardRowTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Title"
            android:textColor="@color/schedule_text"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dashboardRowMeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Meta"
            android:textColor="@color/schedule_muted"
            android:textSize="11sp" />
    </LinearLayout>
</LinearLayout>
