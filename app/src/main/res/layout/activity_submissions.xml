<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/schedule_background">

    <include
        layout="@layout/view_top_header"
        android:layout_gravity="top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="@dimen/top_header_content_padding"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmissionsBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textAllCaps="false"
                android:textColor="@color/schedule_text"
                app:backgroundTint="@color/schedule_surface_muted"
                app:cornerRadius="12dp"
                app:icon="@android:drawable/ic_media_previous"
                app:iconGravity="textStart"
                app:iconPadding="6dp"
                app:iconTint="@color/schedule_text" />

            <TextView
                android:id="@+id/submissionsTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="Review submissions"
                android:textColor="@color/schedule_text"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/submissionsSectionTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Submitted works"
                android:textColor="@color/schedule_text"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputSubmissionSearch"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_form_input"
                android:drawablePadding="6dp"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:drawableTint="@color/schedule_muted"
                android:hint="Search student"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/schedule_text"
                android:textColorHint="@color/schedule_muted" />
        </LinearLayout>

        <TextView
            android:id="@+id/submissionsEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="No submissions yet"
            android:textColor="@color/schedule_muted"
            android:textSize="13sp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/submissionsList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:overScrollMode="never" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/submissionsProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/schedule_accent"
        android:visibility="gone" />
</FrameLayout>
