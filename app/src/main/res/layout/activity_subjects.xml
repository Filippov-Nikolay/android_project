<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/schedule_background">

    <include
        layout="@layout/view_top_header"
        android:layout_gravity="top" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/subjectsRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="@dimen/top_header_content_padding"
                android:paddingBottom="96dp">

            <TextView
                android:id="@+id/subjectsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subjects &amp; load"
                android:textColor="@color/schedule_text"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subjectsSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Manage learning structure"
                android:textColor="@color/schedule_muted"
                android:textSize="12sp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/schedule_surface"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:strokeColor="@color/schedule_line"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Groups"
                        android:textColor="@color/schedule_text"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/inputGroupName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="@drawable/bg_form_input"
                            android:hint="Group name"
                            android:padding="12dp"
                            android:textColor="@color/schedule_text"
                            android:textColorHint="@color/schedule_muted" />

                        <Spinner
                            android:id="@+id/spinnerGroupCourse"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_form_input"
                            android:padding="10dp"
                            android:popupBackground="@color/schedule_surface" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCreateGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Create group"
                        android:textAllCaps="false"
                        android:textColor="@color/schedule_background"
                        app:backgroundTint="@color/schedule_accent"
                        app:cornerRadius="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Existing groups"
                        android:textColor="@color/schedule_muted"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/groupsChipGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:chipSpacing="8dp"
                        app:singleLine="false" />

                    <TextView
                        android:id="@+id/groupsEmpty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="No groups yet."
                        android:textColor="@color/schedule_muted"
                        android:textSize="12sp"
                        android:visibility="gone" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/schedule_surface"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:strokeColor="@color/schedule_line"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subjects"
                        android:textColor="@color/schedule_text"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/inputSubjectName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/bg_form_input"
                        android:hint="Subject name"
                        android:padding="12dp"
                        android:textColor="@color/schedule_text"
                        android:textColorHint="@color/schedule_muted" />

                    <EditText
                        android:id="@+id/inputSubjectDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_form_input"
                        android:hint="Description"
                        android:padding="12dp"
                        android:textColor="@color/schedule_text"
                        android:textColorHint="@color/schedule_muted" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCreateSubject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Add subject"
                        android:textAllCaps="false"
                        android:textColor="@color/schedule_background"
                        app:backgroundTint="@color/schedule_accent"
                        app:cornerRadius="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Existing subjects"
                        android:textColor="@color/schedule_muted"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/subjectsChipGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:chipSpacing="8dp"
                        app:singleLine="false" />

                    <TextView
                        android:id="@+id/subjectsEmpty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="No subjects yet."
                        android:textColor="@color/schedule_muted"
                        android:textSize="12sp"
                        android:visibility="gone" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/schedule_surface"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:strokeColor="@color/schedule_line"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Assignments"
                        android:textColor="@color/schedule_text"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Subject"
                        android:textColor="@color/schedule_muted"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinnerAssignSubject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bg_form_input"
                        android:padding="10dp"
                        android:popupBackground="@color/schedule_surface" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Group"
                        android:textColor="@color/schedule_muted"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinnerAssignGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bg_form_input"
                        android:padding="10dp"
                        android:popupBackground="@color/schedule_surface" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Teacher"
                        android:textColor="@color/schedule_muted"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinnerAssignTeacher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bg_form_input"
                        android:padding="10dp"
                        android:popupBackground="@color/schedule_surface" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAssignTeacher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="Assign"
                        android:textAllCaps="false"
                        android:textColor="@color/schedule_background"
                        app:backgroundTint="@color/schedule_accent"
                        app:cornerRadius="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <include
        layout="@layout/view_bottom_nav_admin"
        android:layout_gravity="bottom" />

    <FrameLayout
        android:id="@+id/subjectEditOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B30B1220"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/subjectEditCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            app:cardBackgroundColor="@color/schedule_surface"
            app:cardCornerRadius="18dp"
            app:cardElevation="8dp"
            app:strokeColor="@color/schedule_line"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit subject"
                    android:textColor="@color/schedule_text"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editSubjectName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_form_input"
                    android:hint="Subject name"
                    android:padding="12dp"
                    android:textColor="@color/schedule_text"
                    android:textColorHint="@color/schedule_muted" />

                <EditText
                    android:id="@+id/editSubjectDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_form_input"
                    android:hint="Description"
                    android:padding="12dp"
                    android:textColor="@color/schedule_text"
                    android:textColorHint="@color/schedule_muted" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEditSubjectCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:textAllCaps="false"
                        android:textColor="@color/schedule_text"
                        app:backgroundTint="@color/schedule_surface_muted"
                        app:cornerRadius="12dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEditSubjectSave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Save"
                        android:textAllCaps="false"
                        android:textColor="@color/schedule_background"
                        app:backgroundTint="@color/schedule_accent"
                        app:cornerRadius="12dp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>

    <ProgressBar
        android:id="@+id/subjectsProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/schedule_accent"
        android:visibility="gone" />
</FrameLayout>
