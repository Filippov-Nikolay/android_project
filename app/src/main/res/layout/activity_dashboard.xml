<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/schedule_background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingBottom="96dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dashboardAvatarSmall"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_dashboard_avatar"
                    android:gravity="center"
                    android:text="OD"
                    android:textColor="@color/schedule_accent"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/dashboardThemeButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_dashboard_avatar"
                    android:contentDescription="Theme"
                    android:scaleType="center"
                    android:src="@android:drawable/ic_menu_today"
                    android:tint="@color/schedule_muted" />

                <ImageButton
                    android:id="@+id/dashboardNotificationButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/bg_dashboard_avatar"
                    android:contentDescription="Notifications"
                    android:scaleType="center"
                    android:src="@android:drawable/ic_dialog_info"
                    android:tint="@color/schedule_muted" />
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/dashboardProfileCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/schedule_surface"
                app:cardCornerRadius="18dp"
                app:cardElevation="10dp"
                app:strokeColor="@color/schedule_line"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/dashboardAvatarLarge"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/bg_dashboard_avatar"
                                android:gravity="center"
                                android:text="OD"
                                android:textColor="@color/schedule_accent"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/dashboardGreeting"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Hello, Student"
                                    android:textColor="@color/schedule_text"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/dashboardGroup"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="Group"
                                    android:textColor="@color/schedule_muted"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/dashboardProfileMore"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="Profile"
                            android:scaleType="center"
                            android:src="@android:drawable/ic_media_next"
                            android:tint="@color/schedule_muted" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/dashboardQuickLessons"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/bg_dashboard_quick_stat"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/dashboardQuickLessonsValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textColor="@color/schedule_text"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/dashboardQuickLessonsLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Lessons today"
                                android:textColor="@color/schedule_muted"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/dashboardQuickTodo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_dashboard_quick_stat"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/dashboardQuickTodoValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textColor="@color/schedule_text"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/dashboardQuickTodoLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Tasks todo"
                                android:textColor="@color/schedule_muted"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/dashboardQuickOverdue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_dashboard_quick_stat"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/dashboardQuickOverdueValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textColor="@color/schedule_text"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/dashboardQuickOverdueLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Overdue"
                                android:textColor="@color/schedule_muted"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/dashboardAccrualsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/schedule_surface"
                app:cardCornerRadius="18dp"
                app:cardElevation="8dp"
                app:strokeColor="@color/schedule_line"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last accruals"
                            android:textColor="@color/schedule_text"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/dashboardAccrualsFilter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_dashboard_chip"
                            android:paddingLeft="10dp"
                            android:paddingTop="4dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="4dp"
                            android:text="All subjects"
                            android:textColor="@color/schedule_muted"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/dashboardAccrualsList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:nestedScrollingEnabled="false" />

                    <TextView
                        android:id="@+id/dashboardAccrualsEmpty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="No accruals yet."
                        android:textColor="@color/schedule_muted"
                        android:textSize="12sp"
                        android:visibility="gone" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/dashboardNewsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/schedule_surface"
                app:cardCornerRadius="18dp"
                app:cardElevation="8dp"
                app:strokeColor="@color/schedule_line"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="University News"
                        android:textColor="@color/schedule_text"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/dashboardNewsList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:nestedScrollingEnabled="false" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/dashboardStatsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/schedule_surface"
                app:cardCornerRadius="18dp"
                app:cardElevation="8dp"
                app:strokeColor="@color/schedule_line"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Statistics"
                            android:textColor="@color/schedule_text"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/dashboardPeriodMonth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_dashboard_chip"
                                android:paddingLeft="10dp"
                                android:paddingTop="4dp"
                                android:paddingRight="10dp"
                                android:paddingBottom="4dp"
                                android:text="Month"
                                android:textColor="@color/schedule_muted"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/dashboardPeriodSemester"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:background="@drawable/bg_dashboard_chip"
                                android:paddingLeft="10dp"
                                android:paddingTop="4dp"
                                android:paddingRight="10dp"
                                android:paddingBottom="4dp"
                                android:text="Semester"
                                android:textColor="@color/schedule_muted"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/dashboardPeriodYear"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:background="@drawable/bg_dashboard_chip"
                                android:paddingLeft="10dp"
                                android:paddingTop="4dp"
                                android:paddingRight="10dp"
                                android:paddingBottom="4dp"
                                android:text="Year"
                                android:textColor="@color/schedule_muted"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dashboardStatsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical" />

                    <TextView
                        android:id="@+id/dashboardStatsEmpty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="No stats yet."
                        android:textColor="@color/schedule_muted"
                        android:textSize="12sp"
                        android:visibility="gone" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/dashboardRecommendationsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/schedule_surface"
                app:cardCornerRadius="18dp"
                app:cardElevation="8dp"
                app:strokeColor="@color/schedule_line"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recommended materials"
                        android:textColor="@color/schedule_text"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/dashboardRecommendationsList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:nestedScrollingEnabled="false" />

                    <TextView
                        android:id="@+id/dashboardRecommendationsEmpty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="No recommendations yet."
                        android:textColor="@color/schedule_muted"
                        android:textSize="12sp"
                        android:visibility="gone" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <include
        layout="@layout/view_bottom_nav_student"
        android:layout_gravity="bottom" />

    <ProgressBar
        android:id="@+id/dashboardProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/schedule_accent"
        android:visibility="gone" />
</FrameLayout>
