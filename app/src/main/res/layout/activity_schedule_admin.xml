<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/schedule_background">

    <include
        layout="@layout/view_top_header"
        android:layout_gravity="top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="@dimen/top_header_content_padding"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/btnCreateSchedule"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/scheduleAdminTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Schedule management"
                        android:textColor="@color/schedule_text"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/scheduleAdminSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Found lessons: 0"
                        android:textColor="@color/schedule_muted"
                        android:textSize="13sp" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCreateSchedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="New"
                    android:textAllCaps="false"
                    android:textColor="@color/schedule_background"
                    android:gravity="center"
                    app:backgroundTint="@color/schedule_accent"
                    app:cornerRadius="12dp"
                    app:icon="@android:drawable/ic_input_add"
                    app:iconGravity="textStart"
                    app:iconPadding="4dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnImportSchedule"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:text="Import"
                    android:textAllCaps="false"
                    android:textColor="@color/schedule_text"
                    android:textSize="12sp"
                    app:cornerRadius="10dp"
                    app:strokeColor="@color/schedule_line" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnExportSchedule"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Export CSV"
                    android:textAllCaps="false"
                    android:textColor="@color/schedule_text"
                    android:textSize="12sp"
                    app:cornerRadius="10dp"
                    app:strokeColor="@color/schedule_line" />
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:cardBackgroundColor="@color/schedule_surface"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:strokeColor="@color/schedule_line"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <EditText
                    android:id="@+id/inputScheduleSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_form_input"
                    android:drawablePadding="8dp"
                    android:drawableStart="@android:drawable/ic_menu_search"
                    android:drawableTint="@color/schedule_muted"
                    android:hint="Search lessons"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:textColor="@color/schedule_text"
                    android:textColorHint="@color/schedule_muted" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Group"
                            android:textColor="@color/schedule_muted"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spinnerScheduleGroupFilter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/bg_form_input"
                            android:padding="10dp"
                            android:popupBackground="@color/schedule_surface" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Subject"
                            android:textColor="@color/schedule_muted"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spinnerScheduleSubjectFilter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/bg_form_input"
                            android:padding="10dp"
                            android:popupBackground="@color/schedule_surface" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/scheduleAdminEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="No lessons found"
            android:textColor="@color/schedule_muted"
            android:textSize="13sp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/scheduleAdminList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:overScrollMode="never" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/scheduleAdminProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/schedule_accent"
        android:visibility="gone" />
</FrameLayout>
