<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/schedule_background">

    <include
        layout="@layout/view_top_header"
        android:layout_gravity="top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="@dimen/top_header_content_padding"
        android:paddingBottom="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@color/schedule_background">

            <TextView
                android:id="@+id/scheduleAdminTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Schedule management"
                android:textColor="@color/schedule_text"
                android:textSize="24sp"
                android:layout_marginEnd="12dp"
                app:layout_constraintEnd_toStartOf="@+id/btnCreateSchedule"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/scheduleAdminSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:alpha="0.7"
                android:text="Found lessons: 0"
                android:textColor="@color/schedule_muted"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/scheduleAdminTitle" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCreateSchedule"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New"
                android:textAllCaps="false"
                android:textColor="@color/schedule_background"
                android:textStyle="bold"
                app:backgroundTint="@color/schedule_accent"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_input_add"
                app:iconPadding="8dp"
                app:iconTint="@color/schedule_background"
                app:layout_constraintBottom_toBottomOf="@id/scheduleAdminSubtitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/scheduleAdminTitle" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnImportSchedule"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="6dp"
                android:text="Import"
                android:textAllCaps="false"
                android:textColor="@color/schedule_text"
                app:cornerRadius="14dp"
                app:icon="@android:drawable/stat_sys_download"
                app:iconSize="16dp"
                app:layout_constraintEnd_toStartOf="@+id/btnExportSchedule"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/scheduleAdminSubtitle"
                app:strokeColor="@color/schedule_line" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExportSchedule"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="Export CSV"
                android:textAllCaps="false"
                android:textColor="@color/schedule_text"
                app:cornerRadius="14dp"
                app:icon="@android:drawable/stat_sys_upload"
                app:iconSize="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/btnImportSchedule"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/btnImportSchedule"
                app:layout_constraintTop_toTopOf="@+id/btnImportSchedule"
                app:strokeColor="@color/schedule_line" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:cardBackgroundColor="@color/schedule_surface"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:strokeColor="@color/schedule_line"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <EditText
                    android:id="@+id/inputScheduleSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:background="@drawable/bg_form_input"

                    android:gravity="center_vertical"

                    android:paddingStart="16dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"

                    android:drawablePadding="10dp"
                    android:drawableStart="@android:drawable/ic_menu_search"
                    android:drawableTint="@color/schedule_muted"

                    android:hint="Search lessons"
                    android:textSize="14sp"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="@color/schedule_text"
                    android:textColorHint="@color/schedule_muted" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Group"
                            android:textColor="@color/schedule_muted"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spinnerScheduleGroupFilter"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/bg_form_input"

                            android:paddingStart="12dp"
                            android:paddingEnd="36dp"

                            android:gravity="center_vertical"
                            android:popupBackground="@color/schedule_surface" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Subject"
                            android:textColor="@color/schedule_muted"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spinnerScheduleSubjectFilter"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/bg_form_input"

                            android:paddingStart="12dp"
                            android:paddingEnd="36dp"

                            android:gravity="center_vertical"
                            android:popupBackground="@color/schedule_surface" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/scheduleAdminEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="No lessons found"
            android:textColor="@color/schedule_muted"
            android:textSize="13sp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/scheduleAdminList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:overScrollMode="never" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/scheduleAdminProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/schedule_accent"
        android:visibility="gone" />
</FrameLayout>
