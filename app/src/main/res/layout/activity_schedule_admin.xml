<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/scheduleAdminTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Schedule Admin"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnCreateSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Create schedule" />

    <Button
        android:id="@+id/btnImportSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Import schedule" />

    <Button
        android:id="@+id/btnExportSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Export schedule (CSV)" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/scheduleAdminList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1" />

    <ProgressBar
        android:id="@+id/scheduleAdminProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:visibility="gone" />
</LinearLayout>
