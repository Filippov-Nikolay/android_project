<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/schedule_background">

    <include
        layout="@layout/view_top_header"
        android:layout_gravity="top" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/manageHomeworkRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:paddingTop="@dimen/top_header_content_padding"
                android:paddingBottom="96dp">

        <TextView
            android:id="@+id/manageHomeworkTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage homework"
            android:textColor="@color/schedule_text"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/manageHomeworkSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Create and review student work"
            android:textColor="@color/schedule_muted"
            android:textSize="11sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCreateHomework"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="12dp"
            android:text="Create task"
            android:textAllCaps="false"
            android:textColor="@color/schedule_background"
            android:textSize="13sp"
            app:backgroundTint="@color/schedule_accent"
            app:cornerRadius="10dp"
            app:icon="@android:drawable/ic_input_add"
            app:iconGravity="textStart"
            app:iconPadding="6dp"
            app:iconTint="@color/schedule_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/schedule_surface"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/schedule_line"
                app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <FrameLayout
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:background="@drawable/bg_manage_stat_icon_blue">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center"
                                android:contentDescription="Active courses"
                                android:src="@android:drawable/ic_menu_agenda"
                                android:tint="@color/manage_stat_blue" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Active courses"
                                android:textColor="@color/schedule_muted"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/manageStatSubjectsValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/schedule_text"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/schedule_surface"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/schedule_line"
                app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <FrameLayout
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:background="@drawable/bg_manage_stat_icon_orange">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center"
                                android:contentDescription="Upcoming deadlines"
                                android:src="@android:drawable/ic_menu_recent_history"
                                android:tint="@color/manage_stat_orange" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Upcoming deadlines"
                                android:textColor="@color/schedule_muted"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/manageStatUpcomingValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/schedule_text"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/schedule_surface"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/schedule_line"
                app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <FrameLayout
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:background="@drawable/bg_manage_stat_icon_green">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center"
                                android:contentDescription="Submitted total"
                                android:src="@android:drawable/ic_menu_send"
                                android:tint="@color/manage_stat_green" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Submitted total"
                                android:textColor="@color/schedule_muted"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/manageStatSubmittedValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/schedule_text"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/teacherTasksList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:nestedScrollingEnabled="false" />

            <TextView
                android:id="@+id/manageHomeworkEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="No tasks yet."
                android:textColor="@color/schedule_muted"
                android:textSize="11sp"
                android:visibility="gone" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <include
        layout="@layout/view_bottom_nav_teacher"
        android:layout_gravity="bottom" />

    <ProgressBar
        android:id="@+id/manageHomeworkProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/schedule_accent"
        android:visibility="gone" />
</FrameLayout>
