<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.OnlineDiary" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:windowBackground">@color/schedule_background</item>
        <item name="android:windowSplashScreenBackground">@color/schedule_background</item>
        <item name="android:colorBackground">@color/schedule_background</item>
        <item name="android:textColorPrimary">@color/schedule_text</item>
        <item name="android:textColorSecondary">@color/schedule_muted</item>
        <item name="android:statusBarColor">@color/schedule_background</item>
        <item name="android:navigationBarColor">@color/schedule_background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="colorSurface">@color/schedule_surface</item>
        <item name="colorOnSurface">@color/schedule_text</item>
        <item name="colorPrimary">@color/schedule_accent</item>
        <item name="colorOnPrimary">@color/schedule_background</item>
        <item name="colorSecondary">@color/schedule_surface_muted</item>
        <item name="colorOnSecondary">@color/schedule_text</item>
    </style>

    <style name="Theme.OnlineDiary" parent="Base.Theme.OnlineDiary" />
</resources>
