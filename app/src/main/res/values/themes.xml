<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/schedule_splash_background</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        <item name="postSplashScreenTheme">@style/Theme.OnlineDiary</item>
    </style>

    <style name="CircleImage">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.App.Translucent" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Base.Theme.OnlineDiary" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:windowBackground">@color/schedule_background</item>
        <item name="android:colorBackground">@color/schedule_background</item>
        <item name="android:textColorPrimary">@color/schedule_text</item>
        <item name="android:textColorSecondary">@color/schedule_muted</item>
        <item name="android:statusBarColor">@color/schedule_background</item>
        <item name="android:navigationBarColor">@color/schedule_background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <item name="colorSurface">@color/schedule_surface</item>
        <item name="colorOnSurface">@color/schedule_text</item>
        <item name="colorPrimary">@color/schedule_accent</item>
        <item name="colorOnPrimary">@color/schedule_background</item>
        <item name="colorSecondary">@color/schedule_surface_muted</item>
        <item name="colorOnSecondary">@color/schedule_text</item>
        <item name="editTextStyle">@style/OnlineDiary.EditText</item>
    </style>

    <style name="Theme.OnlineDiary" parent="Base.Theme.OnlineDiary" />

    <style name="OnlineDiary.EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/cursor_accent</item>
    </style>

    <style name="Theme.OnlineDiary.Dialog" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
</resources>
